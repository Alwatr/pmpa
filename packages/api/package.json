{
  "name": "@alwatr/pmpa-api",
  "version": "0.1.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "private": true,
  "type": "module",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/storage",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/Alwatr/storage#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/storage/issues"
  },
  "esbuild": {
    "entryPoints": [
      "src/main.ts"
    ],
    "outbase": "src",
    "outfile": "dist/main.mjs",
    "sourcemap": true,
    "sourcesContent": true
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch:es",
    "c": "yarn run clean",
    "cb": "run-s clean build",
    "start": "run-s clean build serve",
    "build": "yarn node ./esbuild.js",
    "clean": "rm -rfv dist .tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/index.js",
    "watch:es": "yarn run build --watch"
  },
  "devDependencies": {
    "@alwatr/crypto": "^3.0.0",
    "@alwatr/logger": "^2.3.2",
    "@alwatr/nano-server": "^1.2.3",
    "@alwatr/storage-client": "^4.0.0-rc.0",
    "@alwatr/type": "^1.2.3",
    "@alwatr/util": "^1.3.3",
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.9",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
