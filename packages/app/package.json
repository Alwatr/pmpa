{
  "name": "@alwatr/pmpa-app",
  "version": "0.1.0",
  "description": "Alwatr Progressive Multi Page (Web) Application.",
  "private": true,
  "main": "main.js",
  "type": "module",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "esbuild": {
    "entryPoints": [
      "site/_ts/*.ts"
    ],
    "outdir": "dist/es"
  },
  "scripts": {
    "b": "yarn run build",
    "s": "yarn run start",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "run-s clean build",
    "start": "run-s clean build serve",
    "serve": "wds",
    "build": "yarn node script/build.js",
    "clean": "rm -rfv dist .tsbuildinfo",
    "watch": "run-p watch:build serve",
    "watch:build": "yarn run build --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/pmpa",
    "directory": "packages/app"
  },
  "homepage": "https://github.com/Alwatr/pmpa/tree/next/packages/app#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/pmpa/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@alwatr/fetch": "^2.1.2",
    "@alwatr/font": "^1.2.0",
    "@alwatr/i18n": "^2.0.1",
    "@alwatr/icon-set-extra": "^0.4.0",
    "@alwatr/icon-set-material": "^2.0.1",
    "@alwatr/logger": "^2.3.1",
    "@alwatr/server-context": "^1.2.4",
    "@alwatr/style": "^2.0.2",
    "@alwatr/util": "^1.3.2",
    "@swc/html": "^0.0.28",
    "@types/alpinejs": "^3.13.5",
    "@web/dev-server": "^0.4.1",
    "alpinejs": "^3.13.3",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-variable-compress": "^3.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  }
}
